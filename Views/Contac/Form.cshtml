                        </div>
                    </div>

                    <br>
                    <div class="form-group">
                         <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="input-group">
                             <div class="input-group-text bg-white">
                                <i class="fas fa-at"></i>
                             </div>
                              <input asp-for="Email"  type="text" name="Email" placeholder="Escribe tu Email" class="form-control"> 
                             
                        </div>
                    </div>

                    <br>

                    <div class="form-group">
                        <span asp-validation-for="Asunto" class="text-danger"></span>
                        <div class="input-group">
                             <div class="input-group-text bg-white">
                                <i class="fas fa-comment-dots"></i>
                             </div>
                              <input asp-for="Asunto"  type="text" name="Asunto" placeholder="Escribe un Asunto" class="form-control"> 
                              
                        </div>
                        </div>

                   
                    <br>
                    <div class="form-group">
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                        <div class="input-group">
                             <div class="input-group-text bg-white">
                                <i class="fas fa-pencil-alt"></i>
                             </div>
                             <textarea asp-for="Mensaje" name="Mensaje" placeholder="Escribeme un Mensaje" formControlName="Mensaje" class="form-control"></textarea>
                             
                        </div>
                  </div> 
                   <br>
                             <button class="btn btn-success btn-lg"  type="submit"><i class="fas fa-paper-plane"></i> Enviar</button>      
